{
  "name": "vite-plugin-llmstxt",
  "type": "module",
  "version": "0.0.2",
  "packageManager": "pnpm@10.20.0",
  "description": "Vite plugin for generating llms.txt files",
  "author": "Máximo García <me@onmax.me>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/onmax/vite-plugin-llmstxt.git"
  },
  "keywords": ["vite", "plugin", "llms", "llms.txt", "tutorialkit"],
  "exports": {
    ".": {
      "types": "./dist/index.d.mts",
      "import": "./dist/index.mjs"
    }
  },
  "main": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "files": ["dist"],
  "scripts": {
    "build": "pnpm -r --filter './packages/*' run build && tsdown",
    "dev": "tsdown --watch",
    "lint": "eslint .",
    "prepare": "simple-git-hooks",
    "release": "bumpp && pnpm -r publish --access public",
    "test": "vitest",
    "typecheck": "pnpm -r --filter './packages/*' run typecheck && tsc --noEmit"
  },
  "peerDependencies": {
    "vite": "^5.0.0 || ^6.0.0 || ^7.0.0"
  },
  "dependencies": {
    "@vite-plugin-llmstxt/core": "workspace:*",
    "@vite-plugin-llmstxt/tutorialkit": "workspace:*",
    "@vite-plugin-llmstxt/vitepress": "workspace:*",
    "consola": "catalog:",
    "gray-matter": "catalog:",
    "mdream": "catalog:",
    "minimatch": "catalog:",
    "pathe": "catalog:"
  },
  "devDependencies": {
    "@antfu/eslint-config": "catalog:dev",
    "@antfu/ni": "catalog:dev",
    "@antfu/utils": "catalog:dev",
    "@types/node": "catalog:dev",
    "bumpp": "catalog:dev",
    "eslint": "catalog:dev",
    "lint-staged": "catalog:dev",
    "simple-git-hooks": "catalog:dev",
    "tinyexec": "catalog:dev",
    "tsdown": "catalog:dev",
    "tsx": "catalog:dev",
    "typescript": "catalog:dev",
    "vite": "catalog:dev",
    "vitest": "catalog:dev",
    "vitest-package-exports": "catalog:dev",
    "yaml": "catalog:dev"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm i --frozen-lockfile=false && pnpm lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
